<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="0dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

        <!--ImageView-->
        <ImageView
            android:id="@+id/home_item_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:visibility="visible"/>

        <!--VideoView-->
        <VideoView
            android:id="@+id/home_item_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    <!--item type jpg or mp4-->
    <TextView
        android:id="@+id/home_item_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:gravity="top"
        android:hint="type"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_view"
        android:textColor="@android:color/white"
        android:textSize="10sp"/>

    <!--item title or caption-->
    <TextView
        android:id="@+id/home_item_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="#63000000"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!--onLongClick items-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/home_item_delete_lottie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:lottie_rawRes="@raw/delete_red"
        android:background="@color/white"
        android:visibility="gone"/>
</androidx.cardview.widget.CardView>